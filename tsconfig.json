{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "**/*.ts",
    "./types.d.ts"
  ],
  "compileOnSave": true
}
